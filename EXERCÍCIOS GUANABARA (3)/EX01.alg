algoritmo "ex01"
var
 sal, aumento_sal: real
inicio
Escreval ("|================BEM-VINDO=================|")
 Escreva ("DIGITE O ATUAL VALOR DO SEU SALARIO R$")
  leia(sal)
  aumento_sal<-((sal*0.15)+sal)
 Escreval ("SEU NOVO SALÁRIO REAJUSTADO É DE" ,aumento_sal, "R$")
Escreval ("|=================OBRIGADO=================|")
fimalgoritmo


