algoritmo "papai noiel sem controle"
var
   VALOR_PROD, VALOR_PROD_DESC: REAL
inicio
EscrevaL ("--------------BEM-VINDO---------------")
  Escreva ("DIGITE O VALOR DO PRODUTO R$")
   Leia (VALOR_PROD)

VALOR_PROD_DESC <-(VALOR_PROD - (VALOR_PROD *0.055))
Escreval (" O PRODUTO A VISTA COM DESCONTO DE NATAL É" ,VALOR_PROD_DESC, " R$")
EscrevaL ("--------------OBRIGADO---------------")
fimalgoritmo